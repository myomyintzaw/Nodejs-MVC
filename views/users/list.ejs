<%- include('../partials/header') %>

    <div class="container-fluid">


        <h1><u>User List</u></h1>

        <a href="/users/create" class="btn btn-primary text-fuchsia-900"> Create New User</a>
        <div class="w-75 m-auto m-5">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user=> { %>
                        <tr>
                            <th scope="row">
                                <%= user.name %>
                            </th>
                            <td>
                                <%= user.email %>
                            </td>
                            <td><a href="/users/edit/<%= user.id %>" class="btn btn-warning">Edit</a>

                                <form action="/users/delete/<%= user.id %>" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>

                        <% }) %>
                </tbody>

            </table>
        </div>


    </div>
    <%- include('../partials/footer') %>